generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int           @id @default(autoincrement())
  title       String
  description String
  info        String
  type        String
  price       Float
  oldPrice    Float?
  amount      Int
  image       String
  public_id   String?   // <-- Voeg deze regel toe!
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  reservations Reservation[] // <-- voeg deze regel toe
}

model Reservation {
  id        Int      @id @default(autoincrement())
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  name      String
  email     String
  phone     String
  createdAt DateTime @default(now())
}