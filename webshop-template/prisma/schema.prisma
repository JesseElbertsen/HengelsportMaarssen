generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int           @id @default(autoincrement())
  title       String
  description String
  info        Json?         // <-- aangepast: nu een optioneel JSON veld
  type        String
  price       Float
  oldPrice    Float?
  amount      Int
  image       String?
  public_id   String?   
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  reservations Reservation[] 
}

model Reservation {
  id        Int      @id @default(autoincrement())
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  name      String
  email     String
  phone     String
  amount    Int      @default(1) // nieuw veld
  note      String?              // nieuw veld
  createdAt DateTime @default(now())
}

model BusinessInfo {
  id           Int    @id @default(1)
  adres        String
  postcode     String
  locatie      String
  telefoon     String
  email        String
  kvk          String
  btw          String
  openingHours Json
}